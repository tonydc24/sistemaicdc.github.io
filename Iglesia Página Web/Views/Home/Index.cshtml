@{
    ViewData["Title"] = "Iglesia Casa de Dios Coronado";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="widht=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="TemplateMo">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900" rel="stylesheet">

    <title>@ViewData["Title"]</title>

    <link href="@Url.Content("~/lib/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/fontawesome.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/templatemo-edu-meeting.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/owl.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/lightbox.css")" />
</head>

<body>
    <div class="sub-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-sm-8">
                    <div class="left-content">
                        <p>Casa de Dios Coronado <em>CDC</em>.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-4">
                    <div class="right-icons">
                        <ul>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <a href="@Url.Content("~/Views/Home/Index")" class="logo">Inicio</a>
                        <ul class="nav">
                                <li class="scroll-to-section"><a href="#top" class="active">Inicio</a></li>
                                <li><a href="@Url.Action("Games", "Games")">Sección educativa</a></li>
                                <li><a href="@Url.Action("Inventario", "Inventario")">Inventario</a></li>
                                <li><a href="@Url.Action("Pago", "Pago")">Pagos</a></li>
                                <li><a href="@Url.Action("Correos", "Correos")">Correos</a></li>
                                <li><a href="@Url.Action("Solicitudes","Solicitudes")">Solicitudes</a></li>
                                <li><a href="@Url.Action("Usuarios", "Usuarios")">Usuarios</a></li>
                                <li><a href="#"><i class="bi bi-person-fill">Usuario</i></a></li>
                        </ul>
                        <a class="menu-trigger">
                            <span>Menu</span>
                        </a>
                    </nav>
                 </div>
            </div>
        </div>
    </header>

    <section class="section main-banner-banner" id="top" data-section="section1">
        <video autoplay muted loop id="bg-video">
            <source src="@Url.Content("~/Imagenes/course-video.mp4")" type="video/mp4" />
        </video>

        <div class="video-overplay header-text">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="caption">
                            <img src="@Url.Content("~/Imagenes/Iglesia logo.jpeg")" alt="Logo" style="max-width: 200px; margin-bottom: 20px;" />
                            <h6>¡HOLA AMIGUITOS!</h6>
                            <h2>BIENVENIDOS A CDC</h2>
                            <p>La página oficial de la Iglesia Casa de Dios Coronado donde tendrán acercamiento a nuestras actividades para los menores en el aprendizaje bíblico y conocer de todas las novedades que la iglesia tiene para ofrecer.</p>
                            <div class="main-button-red">
                                <div class="scroll-to-section"><a href="#contact">¡Únase!</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="owl-service-item owl-carousel">
                        
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contact-us" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 align-self-center">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="contact" action="@Url.Action("Contact", "Home")" method="post">
                <div class="row">
                  <div class="col-lg-12">
                    <h2>Solicitudes</h2>
                  </div>
                  <div class="col-lg-4">
                    <fieldset>
                      <input name="name" type="text" id="name" placeholder="Nombre*" required="">
                    </fieldset>
                  </div>
                  <div class="col-lg-4">
                    <fieldset>
                    <input name="email" type="text" id="email" pattern="" placeholder="Correo" required="">
                  </fieldset>
                  </div>
                  <div class="col-lg-4">
                    <fieldset>
                      <input name="subject" type="text" id="subject" placeholder="Sujeto" required="">
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <textarea name="message" type="text" class="form-control" id="message" placeholder="Mensaje" required=""></textarea>
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <button type="submit" id="form-submit" class="button">ENVIAR MENSAJE</button>
                    </fieldset>
                  </div>
                </div>
              </form>
                              
                        </div>
                    </div>
                </div>

                <div class="footer">
                    <p>Copyright © 2024 Todos los Derechos Reservados.</p>
                </div>
            </div>
        </div>
    </section>

    <script src="@Url.Content("~/lib/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/js/isotope.min.js")"></script>
    <script src="@Url.Content("~/js/owl-carousel.js")"></script>
    <script src="@Url.Content("~/js/lightbox.js")"></script>
    <script src="@Url.Content("~/js/tabs.js")"></script>
    <script src="@Url.Content("~/js/video.js")"></script>
    <script src="@Url.Content("~/js/slick-slider.js")"></script>
    <script src="@Url.Content("~/js/custom.js")"></script>
</body>
</html>