@model IEnumerable<Iglesia_Página_Web.Models.InventarioItem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Inventario de la Iglesia</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">

    <style>
        .table-hover tbody tr:hover {
            background-color: #f5f5f5;
        }
        .btn {
            margin-right: 5px;
        }
        .footer {
            background-color: #222;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <section class="container mt-5">
        <h1 class="mb-4">Inventario de la Iglesia</h1>

        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Item</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Fecha</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Nombre</td>
                        <td>@item.Cantidad</td>
                        <td>@item.Fecha</td>
                        <td>
                            <a href="@Url.Action("Edit","Inventario", new { id = item.Id })" class="btn btn-success">Editar</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete","Inventario", new { id = item.Id })" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <div class="footer">
        <p>Copyright © 2024 - Todos los derechos reservados.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>