@model Iglesia_Página_Web.Models.InventarioItem

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Detalles del Artículo del Inventario</title>
</head>
<body>
    <h1>Detalles del Artículo del Inventario</h1>
    <div>
        <h4>Artículo del Inventario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Artículo ID
            </dt>
            <dd class="col-sm-10">
                @Model.ArticuloID
            </dd>

            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Model.NombreArticulo
            </dd>

            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Model.Descripcion
            </dd>

            <dt class="col-sm-2">
                Fecha de creación
            </dt>
            <dd class="col-sm-10">
                @Model.FechaDeCreacion
            </dd>
            <dt class="col-sm-2">
                Cantidad
            </dt>
            <dd class="col-sm-10">
                @Model.Cantidad
            </dd>

            <dt class="col-sm-2">
                Responsable ID
            </dt>
            <dd class="col-sm-10">
                @Model.Responsable
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="ItemEditar" asp-route-id="@Model.ArticuloID" class="btn btn-primary">Editar</a>
        <a asp-controller="Inventario" asp-action="InventarioInicio" class="btn btn-secondary">Volver a la lista</a>
    </div>
</body>
</html>
