@{
    ViewData["Title"] = "Juegos";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Juegos Educativos</title>

    <link rel="stylesheet" href="@Url.Content("~/css/fontawesome.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/templatemo-edu-meeting.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/owl.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/lightbox.css")">
</head>

<body>

    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <a href="/" class="logo">SITIO</a>
                        <ul class="nav">
                            <li><a href="/" class="active">Inicio</a></li>
                            <li><a href="/games">Educativo</a></li>
                            <li><a href="/inventario">Inventario</a></li>
                            <li><a href="/pagos">Pagos</a></li>
                            <li><a href="/correos">Correos</a></li>
                            <li><a href="/peticiones">Peticiones</a></li>
                            <li><a href="/users">Usuarios</a></li>
                            <li><a href="/session"><i class="bi bi-person-fill">Usuario</i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <section class="session">
        <div class="container">
            <h2 class="text-center">Juegos Educativos</h2>
            <section class="games-section">
                <div class="row">
                    <div class="col-12">
                        <div class="owl-carousel owl-theme">
                            <div class="item">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">JuegoID: 001</h5>
                                        <h6>Creador: Juan Pérez</h6>
                                        <p><strong>Nombre Juego:</strong> El Arco de Noé</p>
                                        <p><strong>Descripción:</strong> Aventura educativa sobre la historia de Noé y el Diluvio</p>
                                     </div>
                                </div>
                            </div>
                        </div>

                        <div class="item">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">JuegoID: 002</h5>
                                    <h6>Creador: María García</h6>
                                    <p><strong>NombreJuego:</strong> La Torre de Babel</p>
                                    <p><strong>Descripción:</strong> Desafío educativo sobre la construcción y caída de la Torre de Babel.</p>
                                </div>
                            </div>
                        </div>

                        <div class="item">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Juego ID: 003</h5>
                                    <h6>Creador: Carlos Ruiz</h6>
                                    <p><strong>NombreJuego:</strong> David y Goliat</p>
                                    <p><strong>Descripción:</strong> Juego de estrategia basado en la batalla entre David y Goliat.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="footer">
                <p>Copyright © 2024 Todos los derechos reservados.</p>
            </div>
        </div>
    </section>

    <script src="@Url.Content("~/lib/jquery/jquery.min.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/js/isotope.min.js")"></script>
    <script src="@Url.Content("~/js/owl-carousel.js")"></script>
    <script src="@Url.Content("~/js/lightbox.js")"></script>
    <script src="@Url.Content("~/js/tabs.js")"></script>
    <script src="@Url.Content("~/js/video.js")"></script>
    <script src="@Url.Content("~/js/slick-slider.js")"></script>
    <script src="@Url.Content("~/js/custom.js")"></script>

    <script>
        $(document).ready(function() {
            $(".owl-carousel").owlCarousel({
                loop: true,
                margin: 10,
                nav: true,
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
                        items: 2
                    },
                    1000: {
                        items: 3
                    }
                }
            });
        });
    </script>
</body>
</html>