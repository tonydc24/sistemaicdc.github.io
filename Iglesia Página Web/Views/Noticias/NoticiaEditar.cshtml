@model Iglesia_Página_Web.Models.Noticia

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Noticia</title>
</head>
<body>

    <div class="container">
        <div class="mt-3 mb-3">
            <a asp-controller="Noticias" asp-action="NoticiaList" class="btn btn-secondary">Volver</a>
        </div>
        <h1>Editar Noticia</h1>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div class="form-group">
                        <input asp-for="NoticiaID" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Contenido" class="control-label"></label>
                        <textarea asp-for="Contenido" class="form-control"></textarea>
                        <span asp-validation-for="Contenido" class="text-danger"></span>
                    </div>
                    <input asp-for="FechaPublicacion" class="form-control" type="hidden"/>
                    <div class="form-group">
                        <label asp-for="FechaEvento" class="control-label"></label>
                        <input asp-for="FechaEvento" class="form-control"/>
                        <span asp-validation-for="FechaEvento" class="text-danger"></span>
                    </div>

                    @{
                        var usuarioID = User.Claims.FirstOrDefault(c => c.Type == "UserID")?.Value;
                        int userID;
                        if (int.TryParse(usuarioID, out userID))
                        {
                            ViewData["UserID"] = userID;
                        }
                        else
                        {
                            ViewData["UserID"] = "No disponible";
                        }
                    }
                    <input asp-for="AdministradorID" type="hidden" value="@userID" />

                    <hr />
                    <div class="text-center form-group mt-2 mb-3">
                        <input type="submit" value="Editar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>
</html>

