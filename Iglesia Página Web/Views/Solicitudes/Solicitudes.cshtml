@model IEnumerable<Iglesia_Página_Web.Models.Solicitud>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Solicitudes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .footer {
            background-color: #222;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <header class="header-area header-sticky">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">SITIO</a>
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
                <li class="nav-item"><a class="nav-link" href="/Solicitudes">Solicitudes</a></li>
            </ul>
        </nav>
    </header>

    <section class="session mt-5">
        <div class="container">
            <h2 class="text-center mb-4">Solicitudes</h2>
            <table class="table table-hover table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Solicitud ID</th>
                        <th scope="col">Usuario ID</th>
                        <th scope="col">Detalle Solicitud</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Fecha Solicitud</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var solicitud in Model)
                    {
                        <tr>
                            <td>@solicitud.SolicitudId</td>
                            <td>@solicitud.UsuarioId</td>
                            <td>@solicitud.DetalleSolicitud</td>
                            <td>@solicitud.Estado</td>
                            <td>@solicitud.FechaSolicitud.ToString("yyyy-MM-dd")</td>
                            <td><button class="btn btn-success">Editar</button></td>
                            <td><button class="btn btn-danger">Eliminar</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <div class="footer">
        <p>Copyright © 2024 All Rights Reserved.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>