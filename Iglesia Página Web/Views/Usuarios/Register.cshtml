@{
    ViewData["Title"] = "Registrarse";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="assets/css/fontawesome.css">
</head>
<body>
    <header class="header-area header-sticky">
        <nav class="main-nav">
            <a href="@Url.Action("Index","Home")" class="logo">SITIO</a>
            <ul class="nav">
                <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
                <li><a href="@Url.Action("Login","Usuarios")">Iniciar Sesión</a></li>
                <li><a href="@Url.Action("Register","Usuarios")" class="active">Registrarse</a></li>
            </ul>
        </nav>
    </header>

    <section class="session">
        <div class="container bg-dark text-light">
            <h2 class="text-center">Registrarse</h2>
            <form method="post" asp-action="Register">
                <div class="form-outline mb-4">
                    <input type="text" name="Nombre" class="form-control" required />
                    <label class="form-label">Nombre</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="text" name="UsuarioId" class="form-control" required />
                    <label class="form-label">Usuarios</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="email" name="Correo" class="form-control" required />
                    <label class="form-label">Correo</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="password" name="Contraseña" class="form-control" required />
                    <label class="form-label">Contraseña</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="password" name="ConfirmarContraseña" class="form-control" required />
                    <label class="form-label">Confirmar Contraseña</label>
                </div>
                
                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="termsCheck" required />
                    <label class="form-check-label" for="termsCheck">He leído y acepto los términos</label>
                </div>

                <button type="submit" class="btn btn-primary btn-block mb-4">Registrarse</button>
            </form>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>