@{
    ViewData["Title"] = "Correos";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Formulario de Correos</title>

    <link rel="stylesheet" href="@Url.Content("~/css/fontawesome.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/templatemo-edu-meeting.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/owl.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/lightbox.css")" />

    <style>
        .send-email {
            background-color: #222;
            color: white;
            padding: 30px;
        }
        .send-email h2 {
            margin-bottom: 20px;
        }
        .send-email .form-control,
        .send-email .form-control:focus {
            background-color: #333;
            color: white;
            border: 1px solid #555;
        }
        .send-email .form-control::placeholder {
            color: #ccc;
        }
        .send-email .btn {
            background-color: #007bff;
            border: none;
        }
        .footer {
            background-color: #222;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <a href="/" class="logo">SITIO</a>
                        <ul class="nav">
                            <li><a href="/" class="active">Inicio</a></li>
                            <li><a href="/games">Educativo</a></li>
                            <li><a href="/inventario">Inventario</a></li>
                            <li><a href="/pagos">Pagos</a></li>
                            <li><a href="/correos">Correos</a></li>
                            <li><a href="/peticiones">Peticiones</a></li>
                            <li><a href="/users">Usuarios</a></li>
                            <li><a href="/session"><i class="bi bi-person-fill">Usuario</i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    
    <section class="send-email">
        <div class="container">
            <h2>Enviar Noticias o Eventos</h2>
            <form id="sendEmailForm" method="post" asp-action="SendEmail">
                <div class="mb-3">
                    <label for="subject" class="form-label">Asunto</label>
                    <input type="text" class="form-control" id="subject" name="subject" required />
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Contenido</label>
                    <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </section>


    <div class="footer">
        <p>Copyright © 2024 Todos los derechos reservados.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


</body>
</html>