@model IEnumerable<Iglesia_Página_Web.Models.Pago>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="TemplateMo" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title>Historial de Pagos</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">

    <style>
        .footer {
            background-color: #222;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <header class="header-area headder-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <a href="index.cshtml" class="logo">SITIO</a>
                        <ul class="nav">
                            <li><a href="index.cshtml" class="active">Inicio</a></li>
                            <li><a href="games.cshtml">Educativo</a></li>
                            <li><a href="inventario.cshtml">Inventario</a></li>
                            <li><a href="pagos.cshtml">Pagos</a></li>
                            <li><a href="correos.cshtml">Correos</a></li>
                            <li><a href="peticiones.cshtml">Peticiones</a></li>
                            <li><a href="users.cshtml">Usuarios</a></li>
                            <li><a href="session.cshtml"><i class="bi bi-person-fill">Usuario</i></a></li>
                        </ul>
                        <a class="menu-trigger">
                            <span>Menú</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <section class="session mt-5">
        <div class="container">
            <h2 class="text-center mb-4">Historial de Pagos</h2>
            <table class="table table-hover table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Pago ID</th>
                        <th scope="col">Factura ID</th>
                        <th scope="col">Fecha de Pago</th>
                        <th scope="col">Monto Pagado</th>
                        <th scope="col">Método de Pago</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var pago in Model)
                    {
                         <tr>
                            <td>@pago.PagoId</td>
                            <td>@pago.FacturaId</td>
                            <td>@pago.FechaPago.ToString("yyyy-MM-dd")</td>
                            <td>@pago.MontoPagado.ToString("C")</td>
                            <td>@pago.MetodoPago</td>
                            <td><button class="btn btn-success">Editar</button></td>
                            <td><button class="btn btn-danger">Eliminar</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <div class="footer">
        <p>Copyright © 2024 All Rights Reserved.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>